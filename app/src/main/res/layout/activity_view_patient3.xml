<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg"
    tools:context=".AddPatient3">

    <TextView
        android:id="@+id/add_pat2_past_illness2"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:text="Past illness :"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_date"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/dark_input_box"
        android:hint="10/08/2020"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_pat2_past_illness2"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_hospital_name"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/dark_input_box"
        android:hint="Apollo Hospital Seawoods"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_date"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_doctor_name"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/dark_input_box"
        android:hint="Dr. Aryan Mishra"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_hospital_name"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_complaints"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dark_input_box"
        android:hint="Cough and throat pain"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_doctor_name"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_reports"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dark_input_box"
        android:hint="Covid test : Negative"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_complaints"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_diagnosis"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dark_input_box"
        android:hint="Take warm water"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="25dp"
        android:layout_gravity="center"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_reports"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_drugs_prescribed"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dark_input_box"
        android:hint="Paracetamol and Koflet"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_diagnosis"
        tools:ignore="Autofill,HardcodedText" />

    <TextView
        android:id="@+id/edit_pat3_follow_up_date"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dark_input_box"
        android:hint="11/11/2020"
        android:paddingTop="10dp"
        android:textSize="20sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_drugs_prescribed"
        tools:ignore="Autofill,HardcodedText" />

    <Button
        android:id="@+id/add_pat3_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/dark_button"
        android:text="Finish"
        app:backgroundTint="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pat3_follow_up_date"
        tools:ignore="RtlHardcoded,HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>