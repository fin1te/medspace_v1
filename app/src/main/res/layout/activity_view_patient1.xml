<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bg"
    tools:context=".AddPatient1" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="-252dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_pat1_personal_details"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="Personal Details"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/edit_pat1_aadhaar_no"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="123456789012"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/edit_pat1_name"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="Rishabh Mehta"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/edit_pat1_dob"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="12/12/2000"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.33"
                    android:text="Gender :"
                    android:textSize="18sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="40dp"
                    tools:ignore="HardcodedText"
                    />

                <RadioButton
                    android:id="@+id/edit_pat1_radio_m"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:layout_weight="0.33"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:text="Male"
                    tools:ignore="HardcodedText"
                    />
                <RadioButton
                    android:id="@+id/edit_pat1_radio_f"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:layout_weight="0.33"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:textSize="18sp"
                    android:text="Female"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    android:layout_marginEnd="40dp" />
            </RadioGroup>
            <TextView
                android:id="@+id/edit_pat1_address"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="A85, Oberoi Palace, Sector 18"
                android:paddingTop="10dp"
                android:textSize="20sp"

                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/edit_pat1_pincode"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="400404"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/edit_pat1_phone_no"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="9999988888"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText,TextFields" />
            <TextView
                android:id="@+id/edit_pat1_email_id"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="rishabh@medspace.com"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/edit_pat1_occupation"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="Developer"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/edit_pat1_marital_status"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="Not Married"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/edit_pat1_children"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="0"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/edit_pat1_username"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="rishabh_admin"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText"/>
            <TextView
                android:id="@+id/edit_pat1_password"
                android:layout_width="336dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/dark_input_box"
                android:ems="10"
                android:text="realpassword"
                android:paddingTop="10dp"
                android:textSize="20sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText,TextFields"/>
            <Button
                android:id="@+id/edit_pat1_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dark_button"
                android:text="@string/admin_home_next_button"
                android:layout_gravity="center"
                app:backgroundTint="#534FA8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pat_aadhaar_text_box"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>